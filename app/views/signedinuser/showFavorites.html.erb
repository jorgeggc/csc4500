<% unless current_user %>
  <%= link_to "Sign Up", signup_path %> or 
  <%= link_to "Log In", login_path %>
<% end %>
<p id="alert"><%= alert %></p>
<p id="notice"><%= notice %></p>
</h1>
<h1>Favorited Recipes!</h1>


<% if @recipeArray.nil? %>
  <h2> NO FAVORITED RECIPES </h2>
<% else %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desciption</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipeArray.each do |recipe1| %>
      <% recipe1.each do |recipe| %>
        <tr>
          <td><%= link_to recipe.name, recipe %></td>
          <td><%= recipe.description %></td>
          <td><%= link_to 'UnFavorite', favorites_path(:recipe_id => recipe.id),  :method => :post %></td>
        </tr>
      <% end %> 
    <% end %>
  </tbody>
</table>
<% end %>
<br>

<% if current_user %>
  <%= link_to 'home', home_path %>
  <%= link_to 'Log Out', logout_path  %>
<% end %>

</div>
