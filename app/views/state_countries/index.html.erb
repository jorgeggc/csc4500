<p id="notice"><%= notice %></p>

<h1>State Countries</h1>

<table>
  <thead>
    <tr>
      <th>State</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @state_countries.each do |state_country| %>
      <tr>
        <td><%= state_country.state %></td>
        <td><%= state_country.country %></td>
        <td><%= link_to 'Show', state_country %></td>
        <td><%= link_to 'Edit', edit_state_country_path(state_country) %></td>
        <td><%= link_to 'Destroy', state_country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

